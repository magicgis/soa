<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:/soa-center-core-spring/applicationContext-soa-center.xml
		</param-value>
	</context-param>
	<listener>
		<listener-class>com.yeepay.g3.utils.soa.context.ContextLoaderListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>hessian</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>soa</servlet-name>
		<servlet-class>com.yeepay.g3.utils.soa.remoting.http.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>AddressDisableServlet</servlet-name>
		<servlet-class>com.yeepay.g3.core.soa.center.AddressDisableServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>AddressEnableServlet</servlet-name>
		<servlet-class>com.yeepay.g3.core.soa.center.AddressEnableServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>AddressRoleChangeServlet</servlet-name>
		<servlet-class>com.yeepay.g3.core.soa.center.AddressRoleChangeServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>IDCQueryServlet</servlet-name>
		<servlet-class>com.yeepay.g3.core.soa.center.IDCQueryServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>IDCIPRuleServlet</servlet-name>
		<servlet-class>com.yeepay.g3.core.soa.center.IDCIPRuleServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>IDCDisableServlet</servlet-name>
		<servlet-class>com.yeepay.g3.core.soa.center.IDCDisableServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>IDCEnableServlet</servlet-name>
		<servlet-class>com.yeepay.g3.core.soa.center.IDCEnableServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>IDCCrossRateServlet</servlet-name>
		<servlet-class>com.yeepay.g3.core.soa.center.IDCCrossRateServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>NoProviderMonitorServlet</servlet-name>
		<servlet-class>com.yeepay.g3.core.soa.center.NoProviderMonitorServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>ProviderForbidMonitorServlet</servlet-name>
		<servlet-class>com.yeepay.g3.core.soa.center.ProviderForbidMonitorServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>hessian</servlet-name>
		<url-pattern>/hessian/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>soa</servlet-name>
		<url-pattern>/soa/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddressDisableServlet</servlet-name>
		<url-pattern>/addresses/disable</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddressEnableServlet</servlet-name>
		<url-pattern>/addresses/enable</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddressRoleChangeServlet</servlet-name>
		<url-pattern>/addresses/changerole</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>IDCQueryServlet</servlet-name>
		<url-pattern>/idc/query</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>IDCIPRuleServlet</servlet-name>
		<url-pattern>/idc/iprule</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>IDCDisableServlet</servlet-name>
		<url-pattern>/idc/disable</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>IDCEnableServlet</servlet-name>
		<url-pattern>/idc/enable</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>IDCCrossRateServlet</servlet-name>
		<url-pattern>/idc/cross</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>NoProviderMonitorServlet</servlet-name>
		<url-pattern>/monitor/provider/forbid</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>NoProviderMonitorServlet</servlet-name>
		<url-pattern>/monitor/noprovider</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ProviderForbidMonitorServlet</servlet-name>
		<url-pattern>/monitor/forbidcount</url-pattern>
	</servlet-mapping>

	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
</web-app>
